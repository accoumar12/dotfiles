{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "justMyCode": true,
            "console": "integratedTerminal",
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python Debugger: Current File with env variable",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICES": "1"
            }
        },
        {
            "name": "Python Debugger: Current File with Arguments and env variable",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}",
            "env": {
                "CUDA_VISIBLE_DEVICES": "1"
            }
        },
        {
        "name": "Python: Pytest",
        "type": "debugpy",
        "request": "launch",
        "module": "pytest",
        "justMyCode": true,
        "args": [
            "${file}"
        ],
        },
        {
        "name": "Python: Pytest with env variable",
        "type": "debugpy",
        "request": "launch",
        "module": "pytest",
        // "justMyCode": false,
        "args": [
            "${file}"
        ],
        "env": {
            "CUDA_VISIBLE_DEVICES": "1"
        }
        }
    ]
}
