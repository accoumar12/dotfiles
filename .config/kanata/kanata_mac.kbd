(defcfg
  process-unmapped-keys yes
)

;; Define the keys that will be remapped.
(defsrc
  caps a s d f h j k l ;
)

(defvar
  tap-time 150
  hold-time 150
)

(defalias
;; On mac, the meta key (command) actually takes the role of Alt: so we switch.
  a (tap-hold $tap-time $hold-time a lalt)
  s (tap-hold $tap-time $hold-time s lmet)
  d (tap-hold $tap-time $hold-time d lsft)
  f (tap-hold $tap-time $hold-time f lctl)
  j (tap-hold $tap-time $hold-time j rctl)
  k (tap-hold $tap-time $hold-time k rsft)
  l (tap-hold $tap-time $hold-time l rmet)
;; On mac, the meta key (command) actually takes the role of Alt: so we switch.
  ; (tap-hold $tap-time $hold-time ; ralt)

  ;; Make esc  switch to nav layer on hold.
  esc (tap-hold $tap-time $hold-time esc (layer-toggle nav))
)

;; The default layer where we can permanent remapping.
(deflayer base
  @esc @a @s @d @f _ @j @k @l @;
)

;; Util layer to be able to use vim-like access to arrows.
(deflayer nav
  _ _ _ _ _ left down up right _
)
